    <!-- <div class="bg-success p-2 text-dark bg-opacity-10">This is 10% opacity success background</div> -->

    <div class="container">
        <div class="container-md contains-form">
            <form action="/post" method="post" enctype="multipart/form-data">
                
                <div class="row">
                    <div class="col-6 col-md-4">
                        <select class="form-select" name="category" aria-label="Default select example" onchange="newCategory()" required>
                            <option selected>Select a category</option>
                            <!-- <option value="movies">Movies</option>
                            <option value="recipes">Recipes</option>
                            <option value="books">Books</option>
                            <option value="sports">Sports</option> -->
                            <% cats.forEach( cat => { %>

                              <% if(cat!=""){ %> 
                              <option value="<%= cat %>"> <%= cat %> </option>
                                <% } %> 
                            <% }) %> 
                            <!-- <option value="4">Memes</option> -->

                            
                            <option value="other"> New Category</option>
                        </select>
                    </div>
                    
                    <div class="col-6 col-md-4">
                        <div class="form-floating mb-3 hidden hidcat">
                            <input type="text" name="newcategoryname" class="form-control" id="floatingInput" placeholder="Title" autocomplete="off">
                            <label for="floatingInput">Category name</label> 
                        </div>  
                    </div>
                    <div class="col-6 col-md-4 text-center">
                        <div class="file-input hidden">
                            <input type="file" name="newcategorypic" id="category-image" class="file">
                            <label for="category-image">Category image</label>
                        </div>
                    </div>
                  </div>

    
                <p>
                    <div class="row mb-3">
                    
                        <div class="file-input">
                            <input type="file" name="postimage" id="post-image" class="file">
                            <label for="post-image">Post image</label>
                        </div>
                          
                    </div>
                </p>
    
    
                <p>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="posttitle" id="floatingInput" placeholder="Title" autocomplete="off" required>
                        <label for="floatingInput">Post Title</label>
                    </div>
                </p>
                
    
                <p>
                    <div class="form-floating">
                        <textarea class="form-control" name="postcontent" placeholder="post-content" id="floatingTextarea2" style="height: 100px" required></textarea>
                        <label for="floatingTextarea2">Content</label> 
                    </div>
                </p>
    
                <p>
                    <button type="submit" class="btn ">Post</button>
                </p>
                
            </form>
        </div>
    </div>


